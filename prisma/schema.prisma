// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  userId   String @id
  currency String

  @@map("user")
}

model Category {
  createdAt DateTime @default(now())
  name      String
  userId    String
  icon      String
  type      String   @default("income")

  @@unique([name, userId, type])
  @@map("category")
}

model Transaction {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")
  updateAt  DateTime @default(now()) @map("update_at")

  amount      Float
  description String
  date        DateTime
  userId      String
  type        String   @default("income")

  category     String
  categoryIcon String

  @@map("transaction")
}

model MonthHistory {
  userId  String
  day     Int
  month   Int
  year    Int
  income  Float
  expense Float

  @@id([day, month, year, userId])
  @@map("month_history")
}

model YearHistory {
  userId  String
  month   Int
  year    Int
  income  Float
  expense Float

  @@id([month, year, userId])
  @@map("year_history")
}
